{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "outDir": "build",
    "strict": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "moduleResolution": "Node",
    "sourceMap": true
  },
  "include": ["./src/**/*", "index.ts"],
  "exclude": ["./src/**/*.test.ts", "node_modules", "build"]
}
